{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "baseUrl": "./",
    "paths": {
      "../../shared/types": ["../shared/types"]
    },
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "references": [
    { "path": "../shared" }
  ]
}
